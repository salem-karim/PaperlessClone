# Build stage
FROM node:20 AS build
WORKDIR /app
COPY package*.json ./
RUN npm install
COPY . .
RUN npm run build

# NGINX serve stage
FROM nginx:alpine
COPY --from=build /app/dist /usr/share/nginx/html
# Basic reverse proxy config for backend
COPY nginx.conf /etc/nginx/conf.d/default.conf
EXPOSE 80
